{
  "name": "Node.js & MongoDB",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "forwardPorts": [27017],
  "services": {
    "mongodb": {
      "image": "mongo",
      "ports": ["27017:27017"],
      "restart": "unless-stopped"
    }
  },
  "postCreateCommand": "npm install"
}
